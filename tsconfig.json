{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@src/*": [
        "./*"
      ]
    }
  },
  "lib": [
    "es2015"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/"
  ],
}